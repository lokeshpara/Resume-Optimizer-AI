{
    "manifest_version": 3,
    "name": "Resume Optimizer Pro",
    "version": "1.0.0",
    "description": "Optimize your resume with AI (Gemini or ChatGPT)",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png" 
    },
    "host_permissions": [
      "http://localhost:3000/*"
    ]
  }