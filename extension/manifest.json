{
  "manifest_version": 3,
  "name": "Resume Optimizer Pro",
  "version": "2.0.0",
  "description": "AI-powered resume optimization and analysis with 92-100% ATS match",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:3001/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Resume Optimizer Pro"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "results.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}